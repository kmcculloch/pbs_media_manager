<?php
/**
 * @file
 * Install, update, and uninstall functions for the PBS Media Manager player module.
 */

/**
 * Implements hook_field_schema().
 *
 * Defines the database schema of the field, using the format used by the
 * Schema API.
 *
 * @see http://drupal.org/node/146939
 * @see schemaapi
 * @see hook_field_schema()
 */
function pbs_media_manager_player_field_schema($field) {
  $columns = array(
    'asset_id' => array(
      'type' => 'varchar',
      'length' => '255',
      'not null' => FALSE,
    ),
    'url' => array(
      'type' => 'varchar',
      'length' => '255',
      'not null' => FALSE,
    ),
    'slug' => array(
      'type' => 'varchar',
      'length' => '255',
      'not null' => FALSE,
    ),
    'title' => array(
      'type' => 'varchar',
      'length' => '255',
    ),
    'description' => array(
      'type' => 'text',
      'size' => 'big',
    ),
  );
  $indexes = array(
    'asset_id' => array('asset_id'),
  );
  return array(
    'columns' => $columns,
    'indexes' => $indexes,
  );
}
